<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tuacy.animationdemo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".propertyanimation.PropertyAnimationActivity"
            android:label="属性动画(Property Animation)"/>

        <activity android:name=".viewanimation.ViewAnimationActivity"
            android:label="视图动画(View Animation)"/>

        <activity android:name=".viewanimation.tweenanimation.TweenAnimationActivity"
            android:label="补间动画(Tween Animation)"/>

        <activity android:name=".viewanimation.frameanimation.FrameAnimationActivity"
            android:label="帧动画(Frame Animation)"/>
    </application>

</manifest>